<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="用jar格式压缩文件"
		android:onClick="onClick_Jar_Compress" />
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="解压jar格式文件"
		android:onClick="onClick_Jar_Uncompress" />
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="用zip格式压缩文件"
		android:onClick="onClick_Zip_Compress" />
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="解压zip格式文件"
		android:onClick="onClick_Zip_Uncompress" />
</LinearLayout>
