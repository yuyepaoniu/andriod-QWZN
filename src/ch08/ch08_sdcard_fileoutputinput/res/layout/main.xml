<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="向SD卡保存图像"
		android:onClick="onClick_SaveImageToSDCard" />
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="读取SD卡中的图像"
		android:onClick="onClick_ReadImageFromSDCard" />
	<ImageView android:id="@+id/imageview" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
